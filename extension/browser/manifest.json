{
  "manifest_version": 2,
  "name": "MaxResults",
  "version": "0.0.1",
  "homepage_url": "http://www.maxresults.com",

  "options_page": "settings.html",

  "browser_action": {
    "default_icon": {
      "32": "images/logo-32.png",
      "128": "images/logo-128.png"
    },
    "default_title": "MaxResults Extension",
    "default_popup": "content.html"
  },

  "background": {
	  "scripts": [
      "background.js"
    ],
	  "persistent": true
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "foreground.js"
    ]
  }],

  "permissions": [
    "webNavigation",
    "*://*/*",
    "activeTab",
    "tabs",
    "storage"
  ]
}